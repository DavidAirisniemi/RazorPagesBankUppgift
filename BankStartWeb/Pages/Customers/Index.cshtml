@page
@model BankStartWeb.Pages.Customers.IndexModel
@{
}
<form method="GET">
    <input asp-for="CustomerSearch" />
</form>


<table class="table">
    <tr>
        <th>id</th>
        <th>First name</th>
        <th>Last name</th>
        <th>Social security number</th>
        <th>Address</th>
        <th>City</th>
        <th></th>
    </tr>
    @foreach (var customer in Model.Customers)
    {
        <tr>
            <td>@customer.Id</td>
            <td>@customer.Givenname</td>
            <td>@customer.Surname</td>
            <td>@customer.NationalId</td>
            <td>@customer.Streetaddress</td>
            <td>@customer.City</td>
            <td><a asp-page="CustomerDetails"asp-route-id="@customer.Id">Details</a></td>
        </tr>
    }
</table>
@if (Model.PageNum > 1)
{
    <a asp-page="/Customers/Index" asp-route-pagenum="@(Model.PageNum - 1)">Previous</a>
}
@if (Model.PageNum <= 49)
{
    <a asp-page="/Customers/Index" asp-route-pagenum="@(Model.PageNum + 1)">Next</a>
}